// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
{
  "tab_bar": {
    "show": false
  },
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "show_inline_completions": true,
  "telemetry": {
    "metrics": true
  },
  "theme": "Fleet Dark",
  // "helix_mode": true,
  "vim_mode": true,
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "wrap_guides": [80, 100, 120],
  "vim": {
    // "always": use system clipboard
    // "never": don't use system clipboard
    // "on_yank": use system clipboard for yank operations
    "use_system_clipboard": "always",
    // Lets `f` and `t` motions extend across multiple lines
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "auto"
  },
  // allow cursor to reach edges of screen
  "vertical_scroll_margin": 10,
  "inlay_hints": {
    "enabled": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "languages": {
    "Python": {
      "show_inline_completions": false
    },
    "Typst": {
      "show_inline_completions": false
    },
    "Rust": {
      "show_inline_completions": true
    },
    "HTML": {
      "tab_size": 2
    },
    "CSS": {
      "tab_size": 2
    },
    "JSON": {
      "tab_size": 2
    }
  },
  "jupyter": {
    "kernel_selections": {
      "python": "ml"
      // "python": "dipe"
      // "typescript": "deno",
      // "javascript": "deno",
      // "r": "ark"
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy" // rust-analyzer.checkOnSave.command
        }
      }
    }
  }
}
