// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//

{
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": true
  },
  "ssh_connections": [
    {
      "host": "172.29.49.204",
      "username": "melanyjocelyn",
      "projects": [
        {
          "paths": ["~/aduana_facil_movil"]
        }
      ]
    }
  ],
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "show_inline_completions": true,
  "telemetry": {
    "metrics": true
  },
  "theme": "Fleet Dark",
  "helix_mode": true,
  "vim_mode": true,
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "soft_wrap": "editor_width",
  "wrap_guides": [80, 100, 120],
  "vim": {
    "mode": "helix",
    // "always": use system clipboard
    // "never": don't use system clipboard
    // "on_yank": use system clipboard for yank operations
    "use_system_clipboard": "always",
    // Lets `f` and `t` motions extend across multiple lines
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "auto"
  },
  // allow cursor to reach edges of screen
  "vertical_scroll_margin": 10,
  "inlay_hints": {
    "enabled": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "languages": {
    "Python": {
      "show_inline_completions": true
    },
    "Typst": {
      "show_inline_completions": false
    },
    "Rust": {
      "show_inline_completions": true
    },
    "HTML": {
      "tab_size": 2
    },
    "CSS": {
      "tab_size": 2
    },
    "JSON": {
      "tab_size": 2
    }
  },
  "jupyter": {
    "kernel_selections": {
      // "python": "pwn"
      // "python": "gcloud-eda"
      "python": "ml-proyecto"
      // "python": "dipe"
      // "typescript": "deno",
      // "javascript": "deno",
      // "r": "ark"
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy" // rust-analyzer.checkOnSave.command
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 120,
          "showSyntaxErrors": true,
          "lint": {
            "select": ["ALL"],
            "ignore": ["D", "S101", "E501", "T201"]
          }
        }
      }
    },
    "lsp": {
      "tinymist": {
        "initialization_options": {
          "exportPdf": "onSave",
          "outputPath": "$root/$name",
          "typstExtraArgs": [
            /*"--", "main.typ"*/
          ]
        }
      }
    },
    "ltex": {
      "settings": {
        "ltex": {
          "language": "es"
        }
      }
    }
  },

  "Python": {
    "language_servers": ["ruff", "pyright"],
    "formatter": [
      {
        "code_actions": {
          "source.organizeImports.ruff": true,
          "source.fixAll.ruff": true
        }
      },
      {
        "language_server": {
          "name": "ruff"
        }
      }
    ]
  }
}
